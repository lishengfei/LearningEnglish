<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout  android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="carloslobo.com.finalproject.Fragments.Student.LetterIntroductionFragment"
        android:orientation="vertical"
        android:paddingBottom="25dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/letterPreviewImage"
            android:layout_margin="20dp"
            android:src="@drawable/placeholder"
            android:background="@drawable/img_border"
            android:contentDescription="@string/IntroductionImage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/Word"
            android:id="@+id/WordExample"
            android:fontFamily="sans-serif-light"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorPrimaryDark"
            />

        <Button
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:text="@string/OK"
            android:id="@+id/letterIntroductionButton"
            android:layout_marginTop="67dp"
            android:fontFamily="sans-serif-light"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_primary"
            android:textColor="@color/White"/>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>


