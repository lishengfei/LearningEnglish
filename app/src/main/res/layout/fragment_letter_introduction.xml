<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout  android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="carloslobo.com.finalproject.Fragments.Student.LetterIntroductionFragment"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/letterIntroductionIMG"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:src="@drawable/placeholder" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Sample Text"
            android:id="@+id/WordExample"
            android:layout_below="@+id/letterIntroductionIMG"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-light"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorPrimaryDark"
            />

        <Button
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:text="OK!"
            android:id="@+id/letterIntroductionButton"
            android:layout_below="@+id/WordExample"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="67dp"
            android:fontFamily="sans-serif-light"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_primary"
            android:textColor="@color/White"/>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>


