<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/nested_scroll">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="carloslobo.com.finalproject.Fragments.Teacher.TeacherMenuFragment">

        <!-- TODO: Update blank fragment layout -->

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/groupButton"
            android:src="@drawable/teacher"
            android:layout_marginTop="60dp"
            android:layout_below="@+id/teacherName"
            android:layout_toLeftOf="@+id/textView4"
            android:layout_toStartOf="@+id/textView4"
            android:contentDescription="@string/ClassIcon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/MyGroups"
            android:id="@+id/textView4"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/textColorSecondary"
            android:layout_marginBottom="35dp"
            android:layout_alignBottom="@+id/groupButton"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/WelcomeTeacher"
            android:id="@+id/teacherName"
            android:textColor="@color/textColorSecondary"
            android:fontFamily="sans-serif-light"
            android:textStyle="bold|italic"
            android:layout_below="@+id/textView13"
            android:layout_alignLeft="@+id/textView13"
            android:layout_alignStart="@+id/textView13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/TeachingMode"
            android:id="@+id/textView13"
            android:textSize="35sp"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="24dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/groupButton"
            android:layout_alignStart="@+id/groupButton" />

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>

