<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="carloslobo.com.finalproject.Fragments.Teacher.NewGroupFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical|center_horizontal"
        android:weightSum="1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Nuevo grupo"
            android:id="@+id/textView10"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/colorPrimaryDark" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/newGroupName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_marginTop="51dp"
            android:layout_alignRight="@+id/textView3"
            android:layout_alignEnd="@+id/textView3">

            <EditText
                android:id="@+id/newGroupName_Content"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Nombre"
                android:inputType="text"
                android:maxLength="12"
                android:fontFamily="sans-serif-light"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/create"/>

        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:text="AÃ±adir grupo"
            android:id="@+id/newGroupButton"
            android:layout_marginTop="80dp"
            android:layout_below="@+id/newGroupName"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_primary"
            android:textColor="@color/White"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"/>


    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
