<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="carloslobo.com.finalproject.Fragments.Student.StudentLoginFragment"
    android:orientation="vertical"
    android:gravity="center_vertical|center_horizontal">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/StudentLogin"
        android:id="@+id/textView3"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginRight="0dp"
        android:fontFamily="sans-serif-light" />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/studentUserName"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/studentUserName_Content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/StudentUserName"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="10dp"
            android:inputType="text"
            android:fontFamily="sans-serif-light"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:text="@string/StudentLoginButton"
        android:id="@+id/studentLoginButton"
        android:textStyle="bold"
        android:textColor="@color/White"
        android:background="@drawable/button_primary"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:fontFamily="sans-serif-light"/>

</LinearLayout>
